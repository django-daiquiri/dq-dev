{
    debug
    http_port 9280
    http_port 80
    auto_https disable_redirects
}

:80 {
    reverse_proxy * :9280
}

:9280 {
    reverse_proxy * :8000
    header ForwardTo Gunicorn
}

:9280/static* {
    uri strip_prefix /static
    rewrite /static/ /

    file_server
    root * /home/dq/app/static_root

    header ForwardTo Static
}

:9280/cms* {
    redir /cms/admin /cms/admin/
    redir /cms/admin/ /cms/wp-admin/

    uri strip_prefix /cms
    redir /cms /cms/
    rewrite /cms/ /

    file_server
    root * /home/dq/wp

    # socket for production, port for debug
    php_fastcgi unix//run/php/php.sock
    # php_fastcgi 127.0.0.1:9000

    header ForwardTo Wordpress
}
